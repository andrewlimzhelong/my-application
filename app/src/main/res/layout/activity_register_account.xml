<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAccount"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/createACHeader"
        android:layout_marginBottom="20dp"
        android:background="@drawable/zblackoutlineregister"/>

    <TextView
        android:id="@+id/createACHeader"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/regEmail"
        app:backgroundTint="@color/black"
        android:hint="Create Your Account"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignStart="@+id/regEmail"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textAlignment="center" />

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_above="@+id/regPassword"
            app:backgroundTint="@color/black"
            android:hint="Username"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textAlignment="center"  />

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            app:backgroundTint="@color/black"
            android:hint="Password"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textAlignment="center"  />

        <EditText
            android:id="@+id/regPassword2"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/regPassword"
            android:hint="Password"
            android:textSize="15dp"
            app:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/createAccountBtn"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/regPassword2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_circle"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:text="Create Account" />

    <TextView
        android:id="@+id/loginPageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        android:layout_below="@+id/createAccountBtn"
        android:text="Login With Google Or Facebook"
        android:textColor="@color/black" />

</RelativeLayout>