<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterName"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView1"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        android:elevation="20dp"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/colorWhite">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_gravity="center_vertical"
            android:id="@+id/relLayout1">

            <ImageView
                android:id="@+id/userSelectImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/zzuserblackoutline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editImage"
                android:layout_below="@+id/userSelectImage"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Edit"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/editImage">

                <EditText
                    android:id="@+id/regName"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="Username"
                    android:textColorHint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/black"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/contactHP"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="Contact Number"
                    android:textColorHint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/regName"
                    android:inputType="number"
                    android:maxLength="8"/>

                <Button
                    android:id="@+id/createBtn"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:text="Next"
                    android:elevation="10dp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_circle"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/contactHP"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
