<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RegisterAdditionDetails">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/addInfoPageImage"
        android:layout_above="@+id/companyTV"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blackformlesspixelclipboard"/>

    <TextView
        android:id="@+id/companyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Details"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:layout_above="@+id/companyNamePA"/>

    <EditText
        android:id="@+id/companyNamePA"
        android:layout_width="230dp"
        android:layout_height="40dp"
        app:backgroundTint="@color/black"
        android:layout_marginTop="5dp"
        android:hint="Name Of Company"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/companyDescPA"
        android:textSize="14dp"
        android:maxLength="20"
        android:layout_margin="5dp"/>


            <EditText
                android:id="@+id/companyDescPA"
                android:layout_width="230dp"
                android:layout_height="40dp"
                app:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:hint="Description Of Company"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_above="@+id/officeNum"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_margin="5dp" />

    <EditText
        android:id="@+id/officeNum"
        android:layout_width="230dp"
        android:layout_height="40dp"
        app:backgroundTint="@color/black"
        android:layout_marginTop="5dp"
        android:hint="Office Number"
        android:layout_above="@+id/locationTV"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:textAlignment="center"
        android:maxLength="8"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/countryET"
        android:text="Location"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="13dp" />

            <EditText
                android:id="@+id/countryET"
                android:layout_width="230dp"
                android:layout_height="40dp"
                app:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:hint="Select A Country"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_above="@+id/countryState"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/countryState"
                android:layout_width="230dp"
                android:layout_height="40dp"
                app:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/nextButton"
                android:textColor="@color/black"
                android:hint="State / City"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_margin="5dp"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:background="@drawable/button_circle"/>

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_circle"
        android:textSize="12dp"
        android:text="Skip"
        android:textColor="@color/colorWhite" />

</RelativeLayout>